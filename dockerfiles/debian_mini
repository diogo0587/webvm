FROM --platform=i386 i386/debian:bullseye

ARG DEBIAN_FRONTEND=noninteractive

RUN apt-get update \
 && apt-get -y upgrade \
 && apt-get -y install --no-install-recommends \
        apt-utils \
        gcc \
        python3 \
        python3-pip \
        vim \
        unzip \
        ruby \
        nodejs \
        fakeroot \
        dbus \
        base-files \
        whiptail \
        hexedit \
        patch \
        wamerican \
        ucf \
        manpages \
        file \
        luajit \
        make \
        lua5.3 \
        dialog \
        curl \
        less \
        cowsay \
        netcat-openbsd \
 && rm -rf /var/lib/apt/lists/*

# root com senha conhecida (apenas para laboratório / WebVM)
RUN echo 'root:password' | chpasswd

# usuário extra opcional
RUN useradd -m user && echo "user:password" | chpasswd

# Diretório “oficial” de dados que o WebVM pode tratar como disco persistente
RUN mkdir -p /home/user/dados \
 && chown -R root:root /home/user

COPY --chown=root:root ./examples /home/user/examples
RUN chmod -R +x /home/user/examples/lua

WORKDIR /home/user/

ENV HOME="/home/user" \
    TERM="xterm" \
    USER="root" \
    SHELL="/bin/bash" \
    EDITOR="vim" \
    LANG="en_US.UTF-8" \
    LC_ALL="C"

CMD ["/bin/bash"]